<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/clear_view_cover_recorder_textview_max_height">
        <RelativeLayout android:gravity="top" android:id="@+id/cover_recording_timer_layout" android:layout_width="match_parent" android:layout_height="@dimen/clear_view_cover_title_height">
            <Chronometer android:textSize="@dimen/clear_view_cover_time_size" android:textColor="@color/voice_note_clear_view_cover_text" android:id="@+id/cover_recording_timer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:shadowColor="@color/voice_note_clear_view_cover_shadow" android:shadowDy="2" android:shadowRadius="2" android:layout_alignParentTop="true" android:layout_centerInParent="true" android:fontFamily="sans-serif"/>
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignTop="@+id/cover_recording_timer" android:layout_alignBottom="@+id/cover_recording_timer" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_marginEnd="@dimen/clear_view_cover_indicator_margin" android:layout_toStartOf="@+id/cover_recording_timer">
                <ImageView android:layout_gravity="center_vertical" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear_recorder_during" android:contentDescription="@null"/>
            </FrameLayout>
        </RelativeLayout>
        <TextView android:textSize="@dimen/clear_view_cover_call_reject_size" android:textColor="@color/voice_note_clear_view_cover_text" android:gravity="top|center_vertical|center_horizontal|center" android:id="@+id/remote_callreject" android:focusable="true" android:layout_width="match_parent" android:layout_height="@dimen/clear_view_cover_subtitle_height" android:text="@string/calls_rejected" android:maxLines="1" android:includeFontPadding="false" android:layout_below="@+id/cover_recording_timer_layout" android:fontFamily="sans-serif" android:textAlignment="center"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/clear_view_cover_controller_height" android:layout_marginBottom="@dimen/clear_view_cover_controller_margin_bottom">
        <RelativeLayout android:id="@+id/quick_panel_record_play_pause" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/clear_view_cover_recorder_controller_margin_start_end" android:layout_toStartOf="@+id/remote_pause_button">
            <ImageButton android:id="@+id/remote_record_play_pause_button" android:background="@android:color/transparent" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear_recorder_ic_small_play" android:contentDescription="@null" android:alpha="0.3"/>
        </RelativeLayout>
        <ImageButton android:id="@+id/remote_pause_button" android:background="@drawable/voice_header_clear_cover_btn" android:layout_width="@dimen/clear_view_cover_controller_button_height" android:layout_height="@dimen/clear_view_cover_controller_button_height" android:foreground="@drawable/voice_ripple_clear_cover_btn" android:src="@drawable/clear_recorder_ic_pause" android:scaleType="fitXY" android:layout_centerInParent="true" android:contentDescription="@null"/>
        <RelativeLayout android:id="@+id/cover_save" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginStart="@dimen/clear_view_cover_recorder_controller_margin_start_end" android:layout_toEndOf="@+id/remote_pause_button">
            <ImageButton android:id="@+id/remote_stop_button" android:background="@drawable/voice_header_clear_cover_btn" android:clickable="false" android:layout_width="@dimen/clear_view_cover_controller_button_height" android:layout_height="@dimen/clear_view_cover_controller_button_height" android:foreground="@drawable/voice_ripple_clear_cover_btn" android:src="@drawable/clear_recorder_ic_small_stop" android:scaleType="fitXY" android:layout_centerVertical="true" android:contentDescription="@null"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
