            <ImageButton android:background="@drawable/voice_ripple_clear_cover_text_btn" android:clickable="false" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear_recorder_prev" android:layout_centerInParent="true" android:soundEffectsEnabled="false" android:importantForAccessibility="no"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/remote_next_button" android:focusable="true" android:clickable="true" android:layout_width="@dimen/clear_view_cover_controller_button_height" android:layout_height="@dimen/clear_view_cover_controller_button_height" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_marginStart="@dimen/clear_view_cover_controller_margin_start_end" android:layout_toEndOf="@+id/remote_play_pause_button">
            <ImageButton android:background="@drawable/voice_ripple_clear_cover_text_btn" android:clickable="false" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/clear_recorder_next" android:layout_centerInParent="true" android:soundEffectsEnabled="false" android:importantForAccessibility="no"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
