    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/clear_view_cover_controller_height" android:layout_marginBottom="@dimen/clear_view_cover_controller_margin_bottom" android:layoutDirection="ltr">
